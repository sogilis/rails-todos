<%= link_to "Tâches à faire", todos_path %>
<h1><%= @todo.description %></h1>
<p>
  <% @todo.notes.each_line do |line| %>
    <%= line %><br>
  <% end %>
</p>
<p>
  <%= link_to 'Modifier', edit_todo_path(@todo) %>
</p>
<%= form_tag todo_path(@todo), method: :delete do %>
  <%= submit_tag 'Supprimer' %>
<% end %>
